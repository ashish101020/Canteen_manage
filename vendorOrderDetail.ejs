<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendors Purchase Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f0f0f0;
        }

        /* Responsive Styles */
        @media screen and (max-width: 768px) {
            table {
                width: 90%;
            }
        }

        @media screen and (max-width: 576px) {
            table {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <h1>Vendors Purchase Details</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Order Date</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(purchase) { %>
                <tr>
                    <td><%= purchase.product_name %></td>
                    <td><%= purchase.order_date %></td>
                    <td>$<%= purchase.price %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
